{
    "name": "krazydex",
    "version": "0.1.0",
    "description": "Sci-fi terminal dashboard (xterm + node-pty) with GitHub Releases via electron-builder",
    "author": "YOU",
    "private": true,
    "main": "dist/main/main.js",
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "build": "node scripts/build.mjs",
        "start": "npm run build && electron .",
        "dist": "npm run build && electron-builder",
        "release": "npm run build && electron-builder --publish always"
    },
    "dependencies": {
        "@xterm/addon-fit": "^0.11.0",
        "@xterm/xterm": "^6.0.0",
        "node-pty": "^1.0.0",
        "systeminformation": "^5.0.0"
    },
    "devDependencies": {
        "electron": "^33.0.0",
        "electron-builder": "^25.0.0",
        "esbuild": "^0.25.0"
    },
    "build": {
        "appId": "com.example.krazydex",
        "productName": "KrazyDEX",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**"
        ],
        "asar": true,
        "asarUnpack": [
            "**/*.node"
        ],
        "publish": [
            {
                "provider": "github"
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "artifactName": "${productName}-Windows-${version}-Setup.${ext}"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "artifactName": "${productName}-macOS-${version}.${ext}"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "artifactName": "${productName}-Linux-${version}.${ext}"
        }
    }
}